<%- include('../cabecalho')%>

<div class="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card">
            <div class="card-body">
              <h4 class="card-title mb-0">Usuários</h4>
            </div>
            <div class="col-sm-12">
              <div id="zero_config_filter" class="dataTables_filter">
                <form method="post">
                  <input type="text" class="form-control form-control-sm" placeholder="Insira o nome do usuário para pesquisa" aria-controls="zero_config" name="pesquisa">
                  <input type="submit" class="btn btn-primary" value="Pesquisar">
                </form>
              </div>
            </div>
            <table class="table">
              <thead>
                <tr>
                  <th scope="col">ID</th>
                  <th scope="col">Nome</th>
                  <th scope="col">Email</th>
                  <th scope="col">Foto</th>
                  <th scope="col">Ações</th>
                </tr>
              </thead>
              <tbody>
                <% Usuarios.forEach(function(usuario){ %>
                <tr>
                  <th><%=usuario._id%></th>
                  <td><%=usuario.nome%></td>
                  <td><%=usuario.email%></td>
                  <td><img style="max-width: 15%" src="/fotos/<%=usuario.foto%>" alt="Foto do usuário"></td>
                  <td>
                    <a href="/usuario/edt/<%=usuario._id%>" style="font-size: 180%" class="mdi mdi-tooltip-edit"></a>
                    <a href="/usuario/del/<%=usuario._id%>" style="font-size: 180%" class="mdi mdi-delete"></a>
                  </td>
                  </td>
                </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
    </div>
  </div>
</div>

<%- include('../rodape')%>