<%- include('../cabecalho')%>

<div class="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card">
            <div class="card-body">
              <h4 class="card-title mb-0">Diretores</h4>
            </div>
            <div class="col-sm-12">
              <div id="zero_config_filter" class="dataTables_filter">
                <form method="post">
                  <input type="text" class="form-control form-control-sm" placeholder="Insira o nome do diretor para pesquisa" aria-controls="zero_config" name="pesquisa">
                  <input type="submit" class="btn btn-primary" value="Pesquisar">
                </form>
              </div>
            </div>
            <table class="table">
              <thead>
                <tr>
                  <th scope="col">Nome</th>
                  <th scope="col">Data de nascimento</th>
                  <th scope="col">Foto</th>
                  <th scope="col">Ações</th>
                </tr>
              </thead>
              <tbody>
                <% Diretores.forEach(function(diretor){ %>
                <tr>
                  <th><%=diretor.nome%></th>
                  <td><%=diretor.nascimento.getDate() + 1%>/<%=diretor.nascimento.getMonth() + 1%>/<%=diretor.nascimento.getFullYear()%></td>
                  <td><img style="max-width: 15%" src="/fotos/<%=diretor.foto%>"></td>
                  <td>
                    <a href="/diretor/edt/<%=diretor._id%>" style="font-size: 180%" class="mdi mdi-tooltip-edit"></a>
                    <a href="/diretor/del/<%=diretor._id%>" style="font-size: 180%" class="mdi mdi-delete"></a>
                  </td>
                </tr>
                <% }) %>
            </tbody>
          </table>
      </div>
    </div>
  </div>
</div>

<%- include('../rodape')%>