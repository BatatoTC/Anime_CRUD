<%- include('../cabecalho')%>

      <div class="page-wrapper">
        <div class="page-breadcrumb">
          <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
              <div class="ms-auto text-end">
                <nav aria-label="breadcrumb">
                </nav>
              </div>
            </div>
          </div>
        </div>
        <div class="container-fluid">
          <div class="row">
            <div class="col-md-12">
              <div class="card">
                <form class="form-horizontal" enctype="multipart/form-data" method="post">
                  <div class="card-body">
                    <h4 class="card-title">Editar Anime</h4>
                    <!--Nome-->
                    <div class="form-group row">
                      <label
                        for="fname"
                        class="col-sm-1 text-end control-label col-form-label"
                        >Nome</label
                      >
                      <div class="col-sm-9">
                        <input
                          type="text"
                          class="form-control"
                          id="fname"
                          name="nome"
                          value="<%=Anime.nome%>"
                          required
                        />
                      </div>
                    </div>
                    <!--Episódios-->
                    <div class="form-group row">
                      <label
                        for="lname"
                        class="col-sm-1 text-end control-label col-form-label"
                        >Episódios</label
                      >
                      <div class="col-sm-9">
                        <input
                          type="number"
                          class="form-control"
                          id="lname"
                          name="episodio"
                          value="<%=Anime.episodio%>"
                          required
                        />
                      </div>
                    </div>
                    <!--Início-->
                    <div class="form-group row">
                      <label
                        for="lname"
                        class="col-sm-1 text-end control-label col-form-label"
                        >Início</label
                      >
                      <div class="col-sm-9">
                        <input
                          type="date"
                          class="form-control"
                          id="lname"
                          name="inicio"
                          required
                        />
                      </div>
                    </div>
                    <!--Fim-->
                    <div class="form-group row">
                        <label
                          for="lname"
                          class="col-sm-1 text-end control-label col-form-label"
                          >Fim</label
                        >
                        <div class="col-sm-9">
                          <input
                            type="date"
                            class="form-control"
                            id="lname"
                            name="fim"
                            required
                          />
                        </div>
                    </div>
                    <!--Estúdio-->
                    <div class="form-group row">
                        <label
                          for="lname"
                          class="col-sm-1 text-end control-label col-form-label"
                          >Estúdio</label
                        >
                        <div class="col-sm-9">
                          <input
                            type="text"
                            class="form-control"
                            id="lname"
                            name="estudio"
                            value="<%=Anime.estudio%>"
                            required
                          />
                        </div>
                    </div>
                    <!--Gênero-->
                    <div class="form-group row">
                        <label
                          for="lname"
                          class="col-sm-1 text-end control-label col-form-label"
                          >Gênero</label
                        >
                        <div class="col-sm-9">
                          <input
                            type="text"
                            class="form-control"
                            id="lname"
                            name="generos"
                            value="<%=Anime.genero%>"
                            required
                          />
                        </div>
                    </div>
                    <!--Diretor-->
                    <div class="form-group row">
                        <label class="col-md-1 text-end">Diretor</label>
                        <div class="col-md-9" data-select2-id="11">
                          <select class="select2 form-select shadow-none select2-hidden-accessible" name="diretor" style="width: 100%; height: 36px" required data-select2-id="1" tabindex="-1" aria-hidden="true">
                            <option value="">Select</option>
                            <% Diretores.forEach(function(diretor){ %>
                              <option value="<%=diretor._id%>"><%=diretor.nome%></option>
                            <% }) %>
                          </select>
                        </div>
                    </div>
                    <!--Imagem-->
                    <div class="form-group row">
                      <label class="col-sm-1 text-end control-label col-form-label">
                          Imagem
                      </label>
                      <div class="col-sm-9">
                          <div class="custom-file">
                              <input
                              type="file"
                              class="custom-file-input"
                              id="validatedCustomFile"
                              name="foto"
                              accept="image/*"
                              required
                              />
                          </div>
                      </div>
                    </div>
                  </div>
                  <div class="border-top">
                    <div class="card-body">
                      <input type="submit" class="btn btn-primary" value="Salvar">
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>

<%- include('../rodape')%>